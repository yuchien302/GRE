<div data-role="header">
    <h1>Listing words</h1>
</div>




    <div data-role="collapsible-set" data-theme="c" data-content-theme="d">
    <% @words.each do |word| %>
    <div data-role="collapsible" data-iconpos="right">

        <h4><%= word.word %></h4>
        <p>例句: <%= word.sen %></p>
        <p><%= word.tips %></p>
        <p><%= word.compare %></p>
        <p><%= word.synonyms %></p>
        <p><%= word.antonyms %></p>
        <p><%= word.root %></p>
        <p><%= word.root_derive %></p>
        <p><%= word.note %></p>
        <p><%= link_to 'Show', word %></p>

        <!-- <%= link_to 'Edit', edit_word_path(word), "data-icon" => "gear" %> -->

        <!-- <%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %> -->
    </div>
    <% end %>
    </div>

